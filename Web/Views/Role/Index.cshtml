@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Roles List </h2>
    </div>
</div>
<div class="p-4 border border-secondary rounded">
    @if (Model.Any())
    {
        <table class="table table-dark border border-secondary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    Edit
                                </a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>
<br />
<div class="col-12 text-right mr-auto pl-0">
    <a asp-action="Upsert" asp-controller="Role" class="btn btn-primary ">Create Role</a>
</div>