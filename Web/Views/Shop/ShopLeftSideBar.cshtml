                    categories: JSON.stringify(selectedCategories)
                },
                success: function (response) {
                    $("#contentContainer").html(response);
                }
            });
        });
    //     Sự kiện chọn giá
        $('input[type=radio][name=product-size]').change(function () {
            console.log("Sự kiện 3 xảy ra");
           //Lấy giá trị của radio button được chọn
            var selectedPriceRange = $('input[type=radio][name=product-size]:checked').next().text();
            var currentFilter = JSON.stringify(selectedCategories)
            var currentSearch = searchTerm;
            console.log("Price: " + electedPriceRange + currentFilter + currentSearch);
            //Gửi dữ liệu qua AJAX
            $.ajax({
                url: '/Shop/SearchFilterSort',
                type: 'GET', //Hoặc 'GET' tùy thuộc vào cách bạn đã thiết lập action FilterProducts
                data: {
                    
                    priceRanges: selectedPriceRange,
                    currentFilter:currentFilter,
                    currentSearch:currentSearch
                },
                success: function (response) {
                    $("#contentContainer").html(response);
                }
            });
        });
    //     Sự kiện click button ClearAll
            $("button.clear_all").click(function (e) {
            
            //Xóa nội dung tìm kiếm
            $("#searchInput").val("");
            //Xóa lựa chọn của các checkbox
            $("input[type=checkbox][name=product-categori]").prop("checked", false);
            //Xóa lựa chọn của các radio
            $("input[type=radio][name=product-size]").prop("checked", false);
            console.log("Sự kiện Clear all xảy ra");
            $.ajax({
                url: "/Shop/SearchFilterSort",
                data: { check: 1 },
                success: function (response) {
                    $("#contentContainer").html(response);
                }
            })
        });

      
            //Bắt sự kiện khi click vào nút "Previous"
        function PreviousFunction(e)  {
            
                e.preventDefault();
                var currentPage = $(".Previous").data("page");
                if (currentPage > 1) {

                var currentFilter = JSON.stringify(selectedCategories)
                var currentSearch = searchTerm;
                console.log("Previous: " + currentPage + currentFilter + currentSearch);
                loadPagination(currentPage - 1, currentFilter, currentSearch);
                }

            };

    //         Bắt sự kiện khi click vào nút "Next"
        function NextFunction(e) {
                e.preventDefault();
                var currentPage = parseInt($(".Next").data("page"));
                var totalPages = $(".Next").attr("value");

                if (currentPage < totalPages) {
                    
                     var   currentFilter = JSON.stringify(selectedCategories)
                     var currentSearch = searchTerm;
                console.log("Next: " + currentPage + currentFilter + currentSearch);
                    loadPagination(currentPage + 1,currentFilter,currentSearch);
                }
                
            };

            //Bắt sự kiện khi click vào số trang
        function PageFunction(e) {
                e.preventDefault();
    
                var currentFilter = JSON.stringify(selectedCategories)
                var currentSearch = searchTerm;
            var page = $(".PageNumber").data("page");
                console.log("Page: " + page + currentFilter + currentSearch);
                loadPagination(page,currentFilter,currentSearch);
            };


            function loadPagination(page,currentFilter,currentSearch) {
                console.log("Pageaaaaaa");
                $.ajax({
                    url: '/Shop/SearchFilterSort', 
                    type: 'GET',
                    data: { page: page,
                            currentFilter: currentFilter,
                            currentSearch: currentSearch
                        },
                    success: function (data) {
                     //   Cập nhật partial view phân trang
                        $("#contentContainer").html(data);
                    }
                });
            }
            var searchTerm = "";
    // Sự kiện tìm kiếm
        $("#searchForm").on("submit", function (e) {
            e.preventDefault(); //Ngăn chặn form tự động gửi đi (tránh làm trang web tải lại)
            //Xóa lựa chọn của các checkbox
            $("input[type=checkbox][name=product-categori]").prop("checked", false);
            //Xóa lựa chọn của các radio
            $("input[type=radio][name=product-size]").prop("checked", false);
            selectedCategories = [];
           // Lấy giá trị từ input tìm kiếm
             searchTerm = $("#searchInput").val();
            console.log("Search: " + searchTerm);
            $.ajax({
                url: "/Shop/SearchFilterSort",
                data: { searchString: searchTerm },
                success: function (response) {
                    $("#contentContainer").html(response);
                }
            });
        });
 
</script>
