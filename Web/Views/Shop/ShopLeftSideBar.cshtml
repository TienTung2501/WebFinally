    //     Sự kiện Filter
        $('input[type=checkbox][name=product-categori]').change(function () {
            console.log("Sự kiện 3 xảy ra");
            //Xóa nội dung tìm kiếm
            $("#searchInput").val("");
            searchTerm = "";
