@model List<UserRoleViewModel>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List </h2>
    </div>
</div>
<div class="p-4 border border-secondary rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-dark border border-secondary">
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserEmail
                    </td>
                    <td>
                        @item.RoleName
                    </td>
                    <td class="text-center">
                        <form asp-action="Delete" asp-route-userId="@item.UserId">
                            <a asp-action="Edit" asp-controller="User" asp-route-userId="@item.UserId" class="btn btn-info text-white">
                                Edit
                            </a>

                            <a asp-action="ManageClaims" asp-controller="User" asp-route-userId="@item.UserId" class="btn btn-primary text-white">Claims</a>

                            <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                    class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    }
</div>